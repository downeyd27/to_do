<%= content_for(title: "List | To Do") %>

<h1><%= @list.name %></h1>

<% if (@list.tasks.any?) %>
  <h4>Here are the tasks for this list:</h4>
  <ul>
    <% @list.tasks.each do |task| %>
      <li>
        <%= task.description %>
        <%= link_to "Edit Task", edit_list_task_path(@list, task) %>
        <%= link_to "Delete",    list_task_path(@list, task), data: {
                                 confirm: "Are you sure?", method: "delete" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tasks yet!</p>
<% end %>
<%= link_to "Add Task",        new_list_task_path(@list) %>
<%= link_to "Edit List",       edit_list_path(@list)  %>
<%= link_to "Delete List",     list_path(@list), data: {
                               confirm: "Are you sure?", method: "delete" } %>
<%= link_to "Return to lists", lists_path %>
